@model Vidly.Models.Customer
@{
    ViewBag.Title = Model.Name;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>
<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Membership Type</th>
            @if (Model.Birthdate.HasValue)
            {
                <th>Birthdate</th>
            }
            <th>Discount Rate</th>
            <th>Duration In Months</th>
            <th>Sign Up Fee</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>@Model.MembershipType.Name</td>
            @if (Model.Birthdate.HasValue)
            {
                <th>@Model.Birthdate.Value.ToShortDateString()</th>
            }
            <td>@Model.MembershipType.DiscountRate%</td>
            <td>@Model.MembershipType.DurationInMonths</td>
            <td>@Model.MembershipType.SignUpFee</td>
        </tr>
    </tbody>
</table>